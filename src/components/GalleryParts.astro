---
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   altText: string;
}

const { imagePath, altText} = Astro.props;
const images = import.meta.glob('../assets/images/*.{jpeg,jpg,png,gif}')
---

<div class="col-md-4">
    <Image src={images[imagePath]()} alt={altText} />
</div>

<style lang="scss">
img {
    width: 100%;
    height: 100%;
}
</style>
