---
interface Props {
    section: string;
    isitchecked: string;
    number: string;
}

const { section, number, isitchecked } = Astro.props;
---

<input
    class={`radio-button-${section}`}
    type="radio"
    name={`slider-${section}`}
    id={`s${number}-${section}`}
    data-slide={number}
    checked={isitchecked === "true" ? true : false}
/>
